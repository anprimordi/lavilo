<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dish">

    <fragment
        android:id="@+id/navigation_dish"
        android:name="com.makaryostudio.lavilo.feature.main.ui.dish.DishFragment"
        tools:layout="@layout/fragment_dish">
        <action
            android:id="@+id/action_navigation_dish_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.makaryostudio.lavilo.feature.main.ui.admin.AdminFragment"
        tools:layout="@layout/fragment_admin">
        <action
            android:id="@+id/action_navigation_admin_to_managementFragment"
            app:destination="@id/managementFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_order"
        android:name="com.makaryostudio.lavilo.feature.main.ui.order.OrderFragment"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.makaryostudio.lavilo.feature.main.ui.dish.fragment.cart.CartFragment"
        android:label="Keranjang"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_navigation_order"
            app:destination="@id/navigation_order" />
    </fragment>
    <fragment
        android:id="@+id/managementFragment"
        android:name="com.makaryostudio.lavilo.feature.management.ManagementFragment"
        tools:layout="@layout/fragment_management">
        <action
            android:id="@+id/action_managementFragment_to_addDishFragment"
            app:destination="@id/addDishFragment"
            app:popUpTo="@id/managementFragment" />
        <action
            android:id="@+id/action_managementFragment_to_addTableFragment"
            app:destination="@id/addTableFragment"
            app:popUpTo="@id/managementFragment" />
        <action
            android:id="@+id/action_managementFragment_to_addEmployeeFragment"
            app:destination="@id/addEmployeeFragment"
            app:popUpTo="@id/managementFragment" />
        <action
            android:id="@+id/action_managementFragment_to_checkDishFragment"
            app:destination="@id/checkDishFragment" />
        <action
            android:id="@+id/action_managementFragment_to_checkReportFragment"
            app:destination="@id/checkReportFragment" />
    </fragment>
    <fragment
        android:id="@+id/addDishFragment"
        android:name="com.makaryostudio.lavilo.feature.management.add.AddDishFragment"
        tools:layout="@layout/fragment_add_dish">
        <action
            android:id="@+id/action_addDishFragment_to_managementFragment"
            app:destination="@id/managementFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTableFragment"
        android:name="com.makaryostudio.lavilo.feature.management.add.AddTableFragment"
        android:label="fragment_add_table"
        tools:layout="@layout/fragment_add_table">
        <action
            android:id="@+id/action_addTableFragment_to_managementFragment"
            app:destination="@id/managementFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEmployeeFragment"
        android:name="com.makaryostudio.lavilo.feature.management.add.AddEmployeeFragment"
        android:label="fragment_add_employee"
        tools:layout="@layout/fragment_add_employee">
        <action
            android:id="@+id/action_addEmployeeFragment_to_managementFragment"
            app:destination="@id/managementFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkDishFragment"
        android:name="com.makaryostudio.lavilo.feature.management.check.CheckDishFragment"
        android:label="fragment_check_dish"
        tools:layout="@layout/fragment_check_dish" />
    <fragment
        android:id="@+id/checkReportFragment"
        android:name="com.makaryostudio.lavilo.feature.management.check.CheckReportFragment"
        android:label="fragment_check_report"
        tools:layout="@layout/fragment_check_report" />
</navigation>
